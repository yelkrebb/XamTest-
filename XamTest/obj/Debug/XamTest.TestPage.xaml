<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="XamTest.TestPage" Title="Xamarin Test">
	<ContentPage.Content>
	<StackLayout Padding="20" Spacing="10" BackgroundColor="Gray"> 
		<Label Text="Scanning Trio Devices..."/>
		<Label x:Name="lblDevice" Text="" BackgroundColor="White" TextColor="Navy" HeightRequest="180" WidthRequest="100"> </Label>
		<Label x:Name="lblConnectedDevice" Text="" BackgroundColor="Lime" TextColor="Black" IsVisible="false"/>
		<Button x:Name="btnDisconnect" Text="Disconnect" BackgroundColor="Red" TextColor="White" IsVisible="false"/>
		<Label x:Name="lblCodeCaption" Text="Enter 4-digit code:" IsVisible = "False"/>
		<Entry x:Name="txtCode" Placeholder="Enter Code" TextColor="Red" Keyboard = "Numeric" BackgroundColor="White" IsVisible="false"/>
		<Button x:Name="btnValidate" Text="Validate Code" IsEnabled = "False" IsVisible="false" TextColor="Gray"  BackgroundColor="White"/>
		<Button x:Name="btnGenerateCode" Text="Generate 4-digit code" IsVisible="false" BackgroundColor="Yellow" TextColor="Blue" />
		<Button x:Name="btnGenSerial" Text="Send GetRequest" IsVisible="true" BackgroundColor="Green" TextColor="White" />
		<Entry x:Name="txtEmail" Placeholder="Email Address" TextColor="Blue" Keyboard = "Default" BackgroundColor="White" IsVisible="true"/>
		<Entry x:Name="txtPassword" Placeholder="Password" TextColor="Black" Keyboard = "Default" BackgroundColor="White" IsVisible="true"/>
		<Button x:Name="btnValidateUser" Text="Validate User" IsVisible="true" BackgroundColor="Green" TextColor="White" />
		<Button x:Name="btnAdd" Text="Change User" IsVisible="true" BackgroundColor="Green" TextColor="White" />
   </StackLayout>
	</ContentPage.Content>
</ContentPage>
